{
  "expo": {
    "name": "sistema-lotes-mobile",
    "slug": "sistema-lotes-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sistemalotes.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.sistemalotes.mobile",
      "permissions": [
        "CAMERA",
        "CAMERA_ROLL",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "La aplicación necesita acceso a la cámara para tomar fotos de las mediciones.",
          "microphonePermission": "La aplicación necesita acceso al micrófono para grabar videos."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "La aplicación necesita acceso a la galería para seleccionar fotos de las mediciones.",
          "savePhotosPermission": "La aplicación necesita guardar fotos en la galería."
        }
      ]
    ]
  }
}